APP_NAME="API SUNAT"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Lima
APP_URL=https://tu-proyecto.up.railway.app

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos (Railway MySQL)
DB_CONNECTION=mysql
DB_HOST=${MYSQL_HOST}
DB_PORT=${MYSQL_PORT}
DB_DATABASE=${MYSQL_DATABASE}
DB_USERNAME=${MYSQL_USER}
DB_PASSWORD=${MYSQL_PASSWORD}

BROADCAST_DRIVER=log
CACHE_DRIVER=database
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Redis (opcional, usar database si no tienes Redis en Railway)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Sanctum
SANCTUM_EXPIRATION=1440
SANCTUM_STATEFUL_DOMAINS=

# Mail (usar log para desarrollo, configurar SMTP para producción)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@tuempresa.com"
MAIL_FROM_NAME="${APP_NAME}"

# L5-Swagger
L5_SWAGGER_CONST_HOST=https://tu-proyecto.up.railway.app

# Configuración SUNAT
SUNAT_PRODUCTION=false
SUNAT_ENDPOINT_BETA=https://e-beta.sunat.gob.pe/ol-ti-itcpfegem-beta/billService
SUNAT_ENDPOINT_PRODUCTION=https://e-factura.sunat.gob.pe/ol-ti-itcpfegem/billService

# Certificados SUNAT (dejar vacío, se configurará por empresa)
SUNAT_RUC=
SUNAT_USER=
SUNAT_PASSWORD=
SUNAT_CERTIFICATE_PATH=
SUNAT_CERTIFICATE_PASSWORD=
